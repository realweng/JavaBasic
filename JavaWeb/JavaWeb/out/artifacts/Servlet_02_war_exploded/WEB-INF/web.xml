<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>myServlet01</servlet-name>
        <servlet-class>com.java.web.MyServlet01</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myServlet01</servlet-name>
        <url-pattern>/my1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myServlet02</servlet-name>
        <servlet-class>com.java.web.MyServlet02</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <init-param>
            <param-name>test</param-name>
            <param-value>测试</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>myServlet02</servlet-name>
        <url-pattern>/my2</url-pattern>
    </servlet-mapping>
</web-app>